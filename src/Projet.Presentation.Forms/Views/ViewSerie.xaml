<UserControl x:Class="Projet.Presentation.Forms.ViewSerie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet.Presentation.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="569" d:DesignWidth="742" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="Bisque">
            <Label x:Name="l_nomserie" HorizontalAlignment="Center" Margin="0,40,0,0" FontSize="25">NOM SERIE</Label>
            <Label x:Name="l_note" HorizontalAlignment="Center" Margin="0,0,0,10">Score : 8.5/10</Label>
            <Button Width="140" Height="35" FontSize="16">Ajouter au favoris</Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                    <TextBlock x:Name="l_descriptionSerie" HorizontalAlignment="Center" Margin="0,20,0,0">Slt je suis la description mdr</TextBlock>
                </StackPanel>
                <StackPanel  Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                    <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">Ici seront les épisodes </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
                    <ComboBox x:Name="cmb_ep" Width="150" Margin="0,30,0,0"></ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                    <TextBox Width="400" Height="50">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Resources>
                                    <VisualBrush x:Key="FaintSearch" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label Content="Entrer votre commentaire ici..." Foreground="LightGray"  />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="False">
                                        <Setter Property="Background" Value="{StaticResource FaintSearch}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button Height="30" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0">Envoyer !</Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
    </Grid>
</UserControl>
