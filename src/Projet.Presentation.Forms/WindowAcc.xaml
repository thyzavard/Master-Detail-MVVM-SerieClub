<Window x:Name="Window_Accueil" x:Class="Projet.Presentation.Forms.WindowAcc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet.Presentation.Forms"
        xmlns:viewmodels="clr-namespace:Projet.Presentation.Forms.ViewModel"
        xmlns:views="clr-namespace:Projet.Presentation.Forms"
        mc:Ignorable="d"
         Title="Serie Club" Height="600" Width="1000" FontSize="16" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <views:ViewAcceuil/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate x:Name="viewAcceuilTemplate" DataType="{x:Type viewmodels:ViewAccueil}">
            <views:ViewAcceuil DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="viewProfilTemplate" DataType="{x:Type viewmodels:ViewProfil}">
            <views:ViewProfil DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="viewSerieTemplate" DataType="{x:Type viewmodels:ViewSerie}">
            <views:ViewSerie DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Background="GhostWhite">
            <StackPanel VerticalAlignment="Center" >
                <Button x:Name="btn_admin" Margin="20" Click="admin_Click">Administration</Button>
                <TextBox x:Name="textBox_search" Margin="30,0,30,50" ></TextBox>
                <Label x:Name="l_user" HorizontalAlignment="Center"></Label>
                <Button x:Name="btn_Acc" Margin="20" Click="Acceuil_Click">Accueil</Button>
                <Button x:Name="btn_Profil" Margin="20" Click="Profil_Click">Profil</Button>
                <Button Margin="20" FontSize="15" Click="PersoProfil_Click">Personnaliser le profil</Button>
                <Button Margin="20" Click="btnDeco_Click" BorderBrush="red">Se déconnecter</Button>
                <Button Click="Button_Click">test</Button>
            </StackPanel>
        </DockPanel>

        <ContentControl Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="5" Content="{Binding}"/>

    </Grid>
</Window>
